using System;
using System.Collections.Generic;
using System.Data;
using System.Linq;
using System.Runtime.InteropServices;
using System.Text;
using System.Threading.Tasks;

namespace Xndir3
{
    internal class Program
    {
        static void Main(string[] args)
        {
            int row = 3;
            int col = 4;

            int result = Arrays(row,col);
            Console.WriteLine(result);

        }
        public static int Arrays(int n,int m)
        {
            int row = n;
            int col = m;
            double mainDiagonalSum = 0;
            double secondDiagonalSum = 0;
            double ratioSums = 1;
                        int[,] array = new int[n, m];
            Random random = new Random();


            for (int i = 0; i < array.GetLength(0); i++)
            {
                for (int j = 0; j < array.GetLength(1); j++)
                {
                    array[i, j] = random.Next(1, 10);
                    Console.Write(array[i, j] + "  ");
                }
                Console.WriteLine();
            }

            for (int i = 0; i < row; i++)
            {
                if (i < row)
                {
                    mainDiagonalSum += array[i, i];
                    secondDiagonalSum += array[i, (row - 1) - i];
                }

            }
            Console.WriteLine($"\n\nSum of the main diagonal = {mainDiagonalSum}");
            Console.WriteLine($"\nSum of the secondary diagonal= {secondDiagonalSum}");

            ratioSums = mainDiagonalSum / secondDiagonalSum;
            Console.WriteLine($"\n\nThe ratio of these sums = {ratioSums}");

            return (int)ratioSums;

        }
    }
}
